<%- include('partials/navbar.ejs') %>
<%- include('partials/header.ejs') %>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>produto</h1>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-houver">
                <thead class="table-dark">
                    <tr>
                        <th></th>
                        <th>nome:</th>
                        <th>preco:</th>
                        <th>categoria:</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Chamando o arry de objetos -->
                    <% produtos.forEach(produto => { %>
                    <tr>  
                        <td style="text-align: center;"><img src="/images/produto.png" alt="produto"></td>   
                        <td><%=produto.nome %></td>
                        <td><%=produto.preco.toLocaleString('pr-br', {style: 'currency', currency: 'BRL'}) %></td>
                        <td><%=produto.categoria %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs') %>